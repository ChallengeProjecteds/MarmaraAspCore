@page
@model MarmaraWeb.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Öğrenciler";
}
<div class="container">


    <h1>Öğrenciler Listesi</h1>

    <p>
        <a asp-page="Create">Yeni Oluştur</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].FirstMidName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].EnrollmentDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Student)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstMidName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnrollmentDate)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Düzenle</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Detaylar</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>